@model EditUserVM

<article>
<h1>Edit User Info</h1>
<article>

<form asp-controller="Account" asp-action="Edit">

    <input asp-for="FirstName" placeholder="@(Model.FirstName == null ? "Enter First Name" : Model.FirstName)" />
    <span asp-validation-for="FirstName"></span>

        <input asp-for="LastName" placeholder="@(Model.FirstName == null ? "Enter Last Name" : Model.LastName)" />
    <span asp-validation-for="LastName"></span>

        <input asp-for="Email" placeholder="@(Model.FirstName == null ? "Enter E-mail" : Model.Email)" />
    <span asp-validation-for="Email"></span>
    <br />
    <input type="submit" value="Edit Userinfo" />
</form>
<div asp-validation-summary="All"></div>
</article>
</article>
@section scripts
{
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.7.1.min.js"
            asp-fallback-src="/scripts/lib/jquery/jquery.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}