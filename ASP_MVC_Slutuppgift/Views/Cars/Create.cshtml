@model CreateVM
<article>

<h2>Add new vehicle</h2>
<form asp-controller="Cars" asp-action="Create">
    <input asp-for="Model" placeholder="Model" />
    <span asp-validation-for="Model"></span>

    <input asp-for="LicensePlate" placeholder="License Plate Number" />
    <span asp-validation-for="LicensePlate"></span>

    <textarea asp-for="Description" placeholder="Description" ></textarea>
    <span asp-validation-for="Description"></span>

    <select asp-for="CategoryId" asp-items="Model.CategoryList"> <option value="" disabled selected>Choose Vehicle Type</option></select>
    <span asp-validation-for="CategoryId"></span>

    <br />
    <input type="submit" value="Register new vehicle" onclick="press()"/>
</form>
<div asp-validation-summary="All"></div>
</article>
@section scripts
{
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.7.1.min.js"
            asp-fallback-src="/scripts/lib/jquery/jquery.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}